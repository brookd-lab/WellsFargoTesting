{
  "JwtSettings": {
    "Issuer": "SecureJwtSsoApi",
    "Audience": "SecureJwtSsoApi-Users",
    "SigningKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!",
    "ExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "SsoSettings": {
    "AllowedDomains": [ "company.com", "partner.org" ],
    "RequireEmailVerification": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
